{% if page.content == blank %}
    {% assign blockClass = "content-block--no-bottom-padding" %}
{% else %}
    {% assign blockClass = "content-block" %}
{% endif %}

<div class="page-width">
  {% if page.title == "how it works." %}
    {% section 'info-block-seller' %}
    {% section 'info-block-buyer' %}
  {% elsif page.title == "sell gift cards now, for later." %}
    <h1 class="small--text-center">{{ page.title }}</h1>
    <div class={{blockClass}}>
      <div class="rte rte--indented-images">
        {{ page.content }}
      </div>
    </div>
     {% section 'nbgd-support-banner' %}
  {% else %}
	<!--  NO SECTION TO RENDER  -->
  {% endif %}

</div>
