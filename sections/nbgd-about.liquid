<div class="page-width">
  <div class="nbgd-about-header">
    <div class="nbgd-about-header__text">
      <h1 class="nbgd-h1 nbgd-header__title">{{ section.settings.heading }}</h1>
      <h5 class="nbgd-h5 nbgd-h5--secondary">{{ section.settings.subheading }}</h5>
      <p>{{ section.settings.paragraph }}</p>

      <div class="nbgd-header__btn-container">
        <a href="{{ section.settings.linkUrlA }}" rel="noopener noreferrer" class="btn nbgd-header__btn">{{ section.settings.linkTextA }}</a>
        <a href="{{ section.settings.linkUrlB }}" rel="noopener noreferrer" class="btn nbgd-header__btn">{{ section.settings.linkTextB }}</a>
      </div>
    </div>

    <div class="nbgd-about-header__image">
      {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
      <img class="nbgd-about-image nbgd-about-image--feature lazyload"
        src="{{ section.settings.image | img_url: '300x300' }}"
        data-src="{{ img_url }}"
        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
        data-sizes="auto"
        alt="{{ section.settings.imageAlt | escape }}">
    </div>

  </div>

  <!-- abc, 123 -->

  <h1 class="nbgd-h1 nbgd-header__title">{{ section.settings.teamHeading }}</h1>
  {% for block in section.blocks %}
  <div class="nbgd-about-banner-container box-shadow">
    <div class="nbgd-about-banner">
      <div class="nbgd-about-banner__image-wrapper">
        {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="nbgd-about-image lazyload"
          src="{{ block.settings.image | img_url: '300x300' }}"
          data-src="{{ img_url }}"
          data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
          data-sizes="auto"
          alt="{{ block.settings.imageAlt | escape }}">
      </div>

      <div class="nbgd-about-banner__text-wrapper">
        <h5 class="nbgd-h5 nbgd-h5--secondary">{{ block.settings.subheading }}</h5>
        <p>{{ block.settings.paragraph }}</p>

        {% if block.settings.linkUrl %}
          <a href="{{ block.settings.linkUrl }}" rel="noopener noreferrer" class="btn">{{ block.settings.linkText }}</a>
        {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
</div>



{% schema %}
{
  "name": {
    "en": "NBGD About Us"
  },
  "settings": [{
    "type": "text",
    "id": "heading",
    "label": "About Heading",
    "default": "A little about us."
  },
  {
    "type": "text",
    "id": "subheading",
    "label":  "Subheading",
    "default": "who we are."
  },
  {
    "type": "text",
    "id": "paragraph",
    "label": "Text",
    "default": "Hi, we're Emily and John..."
  },
  {
    "type": "image_picker",
    "id": "image",
    "label": "Headshot Image"
  },
  {
    "type": "text",
    "id": "imageAlt",
    "label": "Alternative text for Image"
  },
  {
    "type": "text",
    "id": "teamHeading",
    "label": "Team Heading",
    "default": "Our family."
  },{
    "type": "url",
    "id": "linkUrlA",
    "label": "LinkedIn URL A"
  },{
    "type": "text",
    "id": "linkTextA",
    "label": "LinkedIn Text A"
  },{
    "type": "url",
    "id": "linkUrlB",
    "label": "LinkedIn URL B"
  },{
    "type": "text",
    "id": "linkTextB",
    "label": "LinkedIn Text B"
  }],
  "blocks": [{
    "type": "nbgd_about",
    "name": "NBGD Profile Card",
    "settings": [{
      "type": "text",
      "id": "subheading",
      "label":  "Subheading",
      "default": "Austin"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Text",
      "default": "Austin is great because ..."
    },
    {
        "type": "url",
        "id": "linkUrl",
        "label": "Link URL"
    },
    {
        "type": "text",
        "id": "linkText",
        "label": "Link Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Headshot Image"
    },
    {
      "type": "text",
      "id": "imageAlt",
      "label": "Alternative text for Image"
    }]
	}]
}
{% endschema %}
