<div class="page-width">
  <div class="section-block nbgd-join-banner-container box-shadow">
    <div class="nbgd-join-banner">
      <div class="left nbgd-join-banner__image-wrapper">
        {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="nbgd-join-banner__image lazyload"
          src="{{ section.settings.image | img_url: '300x300' }}"
          data-src="{{ img_url }}"
          data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
          data-sizes="auto"
          alt="{{ section.settings.imageAlt | escape }}">
      </div>
      <div class="right">
        <h2 class="nbgd-h2">{{ section.settings.heading }}</h2>
        <h5 class="nbgd-h5 nbgd-h5--secondary">{{ section.settings.subheading }}</h5>
        <p>{{ section.settings.paragraph }}</p>
        <a href="{{ section.settings.linkUrl }}" target="_blank" rel="noopener noreferrer" class="btn">{{ section.settings.linkText }}</a>
      </div>
    </div>
  </div>
</div>



{% schema %}
{
  "name": {
    "en": "NBGD Image Banner"
  },
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label":  "Subheading"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Text"
    },
    {
        "type": "url",
        "id": "linkUrl",
        "label": "Link URL"
    },
    {
        "type": "text",
        "id": "linkText",
        "label": "Link Text"
    }	,
    {
      "type": "image_picker",
      "id": "image",
      "label": "Header Image"
    },
    {
      "type": "text",
      "id": "imageAlt",
      "label": "Alternative text for Image"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Image Banner"
      },
      "category": {
        "en": "NBGD Custom Sections"
      }
    }
  ]
}
{% endschema %}
